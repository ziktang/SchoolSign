<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <include layout="@layout/back_title_tool_bar"
        />

    <!-- 课程名称 -->
    <LinearLayout
        android:id="@+id/ll_course_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:weightSum="1"
        >

        <EditText
            android:id="@+id/et_courseName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="课程名称"
            android:textColorHint="@color/black_light"
            android:textSize="16sp"
            />
    </LinearLayout>

    <!-- 课程描述 -->
    <LinearLayout
        android:id="@+id/ll_course_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:paddingTop="8dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:weightSum="1"
        >

        <EditText
            android:id="@+id/et_courseDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:hint="课程描述"
            android:minLines="5"
            android:textColorHint="@color/black_light"
            android:textSize="16sp"
            />
    </LinearLayout>

    <!-- 创建课程 -->
    <TextView
        android:id="@+id/create_course"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_oval"
        android:gravity="center"
        android:text="创建课程"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</LinearLayout>
