<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.schoolsign.user.view.LoginActivity">

    <include layout="@layout/back_title_tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        >


        <!-- 课次名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            >

            <EditText
                android:id="@+id/et_lessonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="本节课名字"
                android:textColorHint="@color/black_light"
                android:textSize="16sp"
                />
        </LinearLayout>

        <!-- 签到时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            >

            <EditText
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="持续时间"
                android:inputType="number"
                android:textColorHint="@color/black_light"
                android:textSize="16sp"
                />

            <com.schoolsign.views.IconFontTextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="分钟"
                android:textColor="@color/black_light"
                android:textSize="18sp"
                android:layout_marginRight="24dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/white"
            />

        <Switch
            android:id="@+id/isPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="立即发布"
            android:textColor="@color/colorAccent"
            >

        </Switch>


        <TextView
            android:id="@+id/createLesson"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bt_oval"
            android:gravity="center"
            android:text="创建课次"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </LinearLayout>
</LinearLayout>
